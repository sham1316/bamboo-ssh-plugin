<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
  
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <!-- internationalize your plugin -->
    <resource type="i18n" name="com.edwardawebb language" location="english"/>

    <!-- defines an example task -->
    <taskType name="bamboo-ssh-plugin" class="com.edwardawebb.atlassian.bamboo-ssh-plugin.SshTask" key="test">
      <description>Execute shell commands on a remote linux server</description>
      <category name="deployment"/>
      <configuration class="com.edwardawebb.atlassian.bamboo-ssh-plugin.ExampleTaskConfigurator"/>
      <resource type="freemarker" name="edit" location="editSshTask.ftl"/>
      <resource type="freemarker" name="view" location="viewSshTask.ftl"/>
     <resource type="download" name="icon" location="ssh-plugin.png"/>
    </taskType>
</atlassian-plugin>
